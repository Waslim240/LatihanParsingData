<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Screen4">

    <TextView
        android:id="@+id/screen4"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_margin="30dp"
        android:text="Screen 4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/masukan_usia"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:hint="Masukan Usia"
        android:layout_width="350dp"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/masukan_alamat"
        android:layout_gravity="center"
        android:hint="Masukan Alamat"
        android:layout_width="350dp"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/masukan_Pekerjaan"
        android:layout_gravity="center"
        android:hint="Masukan Pekerjaan"
        android:layout_width="350dp"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/go"
        android:layout_gravity="center"
        android:text="Go To Screen 3"
        android:layout_margin="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>